<div class='py-3 px-2'>
  <h1 class='mb-3'><%= @task.title %></h1>

  <h4>
    <%= @task.details %>
  </h4>

  <p>
    Is this task completed? <%= @task.completed %>
  </p>

  <p><%= link_to '✏️ Edit this task', edit_task_path %></p>

  <p>
    <%= link_to '❌ Delete',
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}
    %>
  </p>

  <p><%= link_to '👈 Back to Task List', tasks_path %></p>
</div>
